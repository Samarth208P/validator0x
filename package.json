{
  "name": "validator0x",
  "version": "0.1.0",
  "description": "Multi-chain wallet address validator and formatter for Ethereum, Solana, Bitcoin, and Polygon. Prevents sending crypto to invalid addresses.",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "browser": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rimraf dist && rollup -c rollup.config.mjs && tsc --emitDeclarationOnly",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src tests --ext .ts",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "benchmark": "ts-node --project tsconfig.benchmark.json tests/benchmark.ts",
    "prepublishOnly": "npm run lint && npm test && npm run build"
  },
  "keywords": [
    "blockchain",
    "wallet",
    "address",
    "validator",
    "ethereum",
    "solana",
    "bitcoin",
    "polygon",
    "web3",
    "crypto",
    "validator0x"
  ],
  "author": "Samarth Patel",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "rollup": "^4.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.0.0",
    "tslib": "^2.8.1",
    "typescript": "^5.0.0"
  }
}
